APP_ENV=production
TZ=Asia/Jakarta

# Database Configuration (use production MySQL server)
DB_URL=mysql+aiomysql://prod_user:strong_password_here@mysql-host:3306/sparing_prod

# JWT Security (MUST change these in production!)
JWT_SECRET=use_a_very_strong_random_secret_here_min_32_chars
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MIN=60
REFRESH_TOKEN_EXPIRE_MIN=10080

# CORS Origins (add your production frontend URLs)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting (adjust based on your traffic)
RATE_LIMIT_PER_MIN=120

# Workers Configuration
# Gunicorn workers = (2 x CPU cores) + 1
GUNICORN_WORKERS=4
UVICORN_WORKERS=1

# Logging
LOG_LEVEL=warning

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Email/SMTP for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com
